<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/tutorial_background"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/image_tutorial"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:contentDescription="@null"
        android:scaleType="fitXY"
        android:src="@drawable/tut1" />

    <TextView
        android:id="@+id/tvContent"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/textview_item_tutorial_margin_top"
        android:layout_marginBottom="@dimen/textview_item_tutorial_padding"
        android:textColor="@android:color/white"
        android:textSize="@dimen/textview_item_tutorial" />

</LinearLayout>