<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="@dimen/imageview_splash_width"
        android:layout_height="@dimen/imageview_splash_height"
        android:contentDescription="@null"
        android:scaleType="fitXY"
        android:src="@drawable/ic_logo" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/tvHe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/textview_splash_margin_top"
            android:text="@string/textview_splash_HEA"
            android:textColor="@android:color/white"
            android:textSize="@dimen/textview_splash_title_size" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/textview_splash_margin_top"
            android:text="@string/textview_splash_THY"
            android:textColor="@android:color/white"
            android:textSize="@dimen/textview_splash_title_size"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>
